
<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/form.css" />
<%- include('../partials/nav') %>

<section>
  <img src="<%= user.profile.avatar %>" alt="">
  <h1>Expanse</h1>
  <% if (user) { %>
    <h2>Add a Expense</h2>
    <form action="/expenses" method="POST">
      <label>Amount: </label>
      <input type="text" name="amount" autocomplete="off" placeholder="0">
      <label for="date-input">Date Spent:</label>
      <input type="datetime-local" name="date" min="2024-01-20T09:00" id="date-input">
      <label>category: </label>
      <input type="text" name="category" autocomplete="off" placeholder="food">
      <label> Description: </label>
      <textarea type="text" placeholder="Enter description" name="description" autocomplete="off" rows="2" cols="30"></textarea>
      <button type="submit">Add Expense</button>
    </form>
  <% } %>
  <h2>Expense list</h2>
  <table>
    <thread>
      <tr>
        <th>Amount</th>
        <th>Date</th>
        <th>Category</th>
        <th>description</th>
      </tr>
    </thread>
    <tbody>
      <% expenses.forEach(expense => { %>
       <tr>
        <td><%= expense.amount %></td>
        <td><%= expense.date %></td>
        <!-- <td><%= expense.category %></td> -->
        <td><%= expense.description %></td>
        <td>
          <form>
            <botton type="submit">?</botton>
          </form>
        </td>
       </tr>
      <% }) %>
    </tbody>
  </table>
</section>

<%- include('../partials/footer') %>