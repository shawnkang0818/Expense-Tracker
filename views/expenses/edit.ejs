<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/expenses/edit.css" />
<%- include('../partials/nav') %>

<section>
  <% if (expense.owner.equals(user?.profile._id)) { %>
    <h2>Edit Expense Info</h2>
    <form id="new-form" action="/expenses/<%= expense._id %>?_method=PUT"  method="POST">
      <label for="price-input">Price: </label>
      <input type="text" id="price-input" name="price" value="<%= expense.price %>" required>
      <label for="date-input">Date Spent:</label>
      <input type="datetime-local" name="date" min="2024-01-21 09:00" id="date-input" value="<%= expense.date.toISOString().slice(0,16) %>" required>
      <label for="description-textarea"> Description: </label>
      <input type="text" id="description-textarea" name="description" rows="2" cols="30" value="<%= expense.description %>"></input>
      <label for="reasonable-input" >Reasonable</label>
      <input type="checkbox" name="reasonable" <%= expense.reasonable ? 'checked' : 'null' %>>
  <div class="btn-container" >
      <button class="btn" type="submit">Save Change</button>
    </form>
    <form action="/expenses/<%= expense._id %>?_method=DELETE" method="POST">
      <button class="btn" type="submit">Delete this expense</button>
    </form>
  </div>
  <% } %>
</section>




<%- include('../partials/footer') %>